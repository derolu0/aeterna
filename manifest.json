  "prefer_related_applications": false,
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+lexicon",
      "url": "./index.html?concept=%s"
    },
    {
      "protocol": "web+filosofo",
      "url": "./index.html?filosofo=%s"
    }
  ],
  "share_target": {
    "action": "./index.html",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    },
    "enctype": "application/x-www-form-urlencoded"
  },
  "capture_links": "new-client",
  "launch_handler": {
    "client_mode": "focus-existing",
    "route_to": "existing-client"
  },
  "edge_side_panel": {
    "preferred_width": 360
  },
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/vnd.ms-excel": [".xls"],
        "text/csv": [".csv"],
        "application/json": [".json"]
      },
      "launch_type": "single-client"
    }
  ],
  "permissions": [
    "clipboard-write"
  ],
  "id": "/index.html",
  "lang": "it",
  "dir": "ltr",
  "scope_extensions": [
    {
      "origin": "https://aeterna-lexicon.web.app"
    },
    {
      "origin": "https://aeterna-lexicon.firebaseapp.com"
    }
  ],
  "handle_links": "preferred",
  "shortcuts_lastupdate": "2026-01-01",
  "version": "2.0.0",
  "author": "Salvatore De Rosa - Project Work Filosofico"
